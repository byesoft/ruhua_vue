.bankcard .card {
  background-color: #45AAF0;
  margin: 20px 20px 30px;
  border-radius: 10px;
  padding: 20px 10px;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-shadow: 0px 5px 10px #A5CBEA;
}
.bankcard .card_l {
  width: 20%;
  text-align: center;
}
.bankcard .card_l ._img {
  width: 45px;
  height: 45px;
}
.bankcard .card_r {
  width: 80%;
}
.bankcard .card_r .card_r_1 {
  font-size: 16px;
  padding-bottom: 10px;
}
.bankcard .card_r .card_r_2 {
  font-size: 14px;
  padding-bottom: 20px;
}
.bankcard .card_r .card_r_3 {
  font-size: 14px;
}
.bankcard .card_two {
  background-color: #FF5661;
  margin: 20px;
  border-radius: 10px;
  padding: 20px 10px;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-shadow: 0px 5px 10px #F0B7B9;
}
.bankcard .btn {
  background-color: #DE411C;
  color: #fff;
  margin: 10px 20px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 20px;
  position: fixed;
  left: 0;
  bottom: 20px;
  z-index: 99;
  width: 90%;
}

