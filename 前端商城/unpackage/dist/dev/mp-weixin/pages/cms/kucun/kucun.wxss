.kucun {
  background-color: #fff;
}
.kucun .search {
  margin: 10px;
  border: 2px solid #EDEDED;
  border-radius: 20px;
  padding-left: 10px;
  color: #B6B6B6;
  height: 30px;
  line-height: 30px;
}
.kucun .kc {
  box-shadow: inset 0px 15px 20px -15px #EAEAEA;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #F3F3F3;
}
.kucun .kc_l {
  width: 50%;
  text-align: center;
  border-right: 1px solid #F3F3F3;
}
.kucun .kc_r {
  width: 50%;
  text-align: center;
}
.kucun .sply {
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 1px solid #F3F3F3;
}
.kucun .sply ._span {
  padding: 0 5px;
}
.kucun .pro {
  padding: 15px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #F3F3F3;
}
.kucun .pro_l {
  width: 25%;
  text-align: center;
}
.kucun .pro_l ._img {
  width: 60px;
  height: 60px;
}
.kucun .pro_r {
  width: 75%;
}
.kucun .pro_01 {
  font-size: 14px;
  padding-bottom: 5px;
}
.kucun .pro_02 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  color: #79797A;
  height: 20px;
  line-height: 20px;
}
.kucun .pro_btn {
  padding: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: reverse;
  -webkit-flex-direction: row-reverse;
          flex-direction: row-reverse;
}
.kucun .pt_01 {
  border: 1px solid #8A8A8A;
  color: #79797A;
  text-align: center;
  padding: 0 6px;
  width: 60px;
  margin-left: 8px;
  border-radius: 2px;
  height: 28px;
  line-height: 28px;
}
.kucun .pt_02 {
  padding-top: 5px;
}
.kucun .H4 {
  height: 4px;
  background-color: #F3F3F3;
}
.kucun .down {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.kucun .tjsp {
  background-color: #9D9D9D;
  color: #EFEFEF;
  border-radius: 20px;
  margin: 20px 10px 10px;
  height: 30px;
