<view class="cart"><view class="cart-list"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="k" wx:key="id"><block><view class="cart-item"><view class="image-wrappers"><image src="{{getimg+item.imgs}}" data-event-opts="{{[['tap',[['jump_detail',['$0'],[[['cartList','id',item.id,'goods_id']]]]]]]}}" bindtap="__e" class="_img"></image><view data-event-opts="{{[['tap',[['_radio',['item',k]]]]]}}" class="{{['yticon icon-xuanzhong2 checkbox',(item.radio)?'checked':'']}}" bindtap="__e"></view></view><view class="item-right"><text data-event-opts="{{[['tap',[['jump_detail',['$0'],[[['cartList','id',item.id,'goods_id']]]]]]]}}" class="clamp title" bindtap="__e">{{item.goods_name}}</text><text class="attr">{{item.attr_val}}</text><text class="price">{{"¥"+item.price}}</text><tui-numberbox vue-id="{{'1-'+k}}" max="{{item.stock}}" min="{{1}}" value="{{item.num}}" data-event-opts="{{[['^change',[['numberChange',['$event',k]]]]]}}" bind:change="__e" bind:__l="__l"></tui-numberbox></view><text data-event-opts="{{[['tap',[['deleteCartItem',[k]]]]]}}" class="del-btn yticon icon-fork" bindtap="__e"></text></view></block></block></view><view class="action-section"><view class="checkbox"><block wx:if="{{cartList}}"><view data-event-opts="{{[['tap',[['clearCart',['$event']]]]]}}" class="clear-btn" bindtap="__e">清空</view></block></view><view class="total-box"><text class="price">{{"¥"+total}}</text></view><button class="no-border confirm-btn" type="primary" data-event-opts="{{[['tap',[['createOrder',['$event']]]]]}}" bindtap="__e">去结算</button></view></view>